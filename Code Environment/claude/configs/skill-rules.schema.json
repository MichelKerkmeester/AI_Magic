{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://claude.code/schemas/skill-rules.schema.json",
  "title": "Skill Rules Configuration",
  "description": "Schema for skill-rules.json configuration file",
  "type": "object",
  "required": ["skills", "riskPatterns"],
  "additionalProperties": false,
  "properties": {
    "skills": {
      "type": "object",
      "description": "Collection of skill definitions",
      "patternProperties": {
        "^[a-z][a-z0-9-]*$": {
          "$ref": "#/definitions/skill"
        }
      },
      "additionalProperties": false
    },
    "riskPatterns": {
      "type": "object",
      "description": "Collection of code risk pattern definitions",
      "patternProperties": {
        "^[a-zA-Z][a-zA-Z0-9-]*$": {
          "$ref": "#/definitions/riskPattern"
        }
      },
      "additionalProperties": false
    }
  },
  "definitions": {
    "skill": {
      "type": "object",
      "required": ["type", "enforcement", "priority", "description", "promptTriggers"],
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "enum": ["knowledge", "workflow", "tool", "cli-tool"],
          "description": "Type of skill"
        },
        "enforcement": {
          "type": "string",
          "enum": ["strict", "suggest"],
          "description": "Enforcement mode"
        },
        "priority": {
          "type": "string",
          "enum": ["critical", "high", "medium", "low"],
          "description": "Priority level for skill activation"
        },
        "description": {
          "type": "string",
          "minLength": 10,
          "description": "Clear description of skill purpose and usage"
        },
        "promptTriggers": {
          "type": "object",
          "required": ["keywords", "intentPatterns"],
          "additionalProperties": false,
          "properties": {
            "keywords": {
              "type": "array",
              "items": {
                "type": "string",
                "minLength": 2
              },
              "minItems": 1,
              "description": "Keywords that trigger skill activation"
            },
            "intentPatterns": {
              "type": "array",
              "items": {
                "type": "string",
                "minLength": 3
              },
              "minItems": 0,
              "description": "Regex patterns matching user intent"
            }
          }
        },
        "fileTriggers": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "pathPatterns": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "File path patterns (glob)"
            },
            "contentPatterns": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "File content patterns (regex)"
            }
          }
        },
        "alwaysActive": {
          "type": "boolean",
          "description": "Whether skill is always active regardless of triggers"
        }
      }
    },
    "riskPattern": {
      "type": "object",
      "required": ["patterns", "reminder"],
      "additionalProperties": false,
      "properties": {
        "patterns": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "minItems": 1,
          "description": "Regex patterns to detect risky code"
        },
        "reminder": {
          "type": "string",
          "minLength": 10,
          "description": "Reminder message shown when pattern detected"
        }
      }
    }
  }
}
