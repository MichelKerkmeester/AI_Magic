{
  "$schema": "https://opencode.ai/config.json",
  "plugin": [
    "opencode-skills",
    "@tarquinen/opencode-dcp@0.3.19"
  ],
  "mcp": {
    "code_mode": {
      "type": "local",
      "command": [
        "node",
        "/path/to/code-mode-mcp/dist/index.js"
      ],
      "environment": {
        "UTCP_CONFIG_FILE": "/path/to/.utcp_config.json"
      },
      "enabled": true
    },
    "sequential-thinking": {
      "type": "local",
      "command": [
        "/path/to/mcp-sequential-thinking/.venv/bin/python3.12",
        "-m",
        "mcp_sequential_thinking.server"
      ]
    }
  }
}