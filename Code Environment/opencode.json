{
  "$schema": "https://opencode.ai/config.json",
  "keybinds": {
    "input_clear": "ctrl+c",
    "input_newline": "ctrl+s"
  },
  "plugin": [
    "opencode-skills"
  ],
  "mcp": {
    "code_mode": {
      "type": "local",
      "command": [
        "node",
        "/path/to/code-mode-mcp/dist/index.js"
      ],
      "environment": {
        "UTCP_CONFIG_FILE": "/path/to/project/.utcp_config.json"
      },
      "enabled": true
    },
    "sequential_thinking": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "enabled": true
    },
    "semantic_memory": {
      "type": "local",
      "command": [
        "node",
        "/path/to/semantic-memory/semantic-memory.js"
      ],
      "environment": {
        "_NOTE_DATABASE": "Stores vectors in: {cwd}/.opencode/memory/memory-index.sqlite",
        "_NOTE_MODEL": "Uses nomic-embed-text-v1.5 (768-dim embeddings)"
      },
      "enabled": true
    },
    "semantic_search": {
      "type": "local",
      "command": [
        "/path/to/venv/bin/python",
        "/path/to/semantic-search/src/server_sqlite.py"
      ],
      "environment": {
        "MCP_CODEBASE_WORKSPACE": "/path/to/project",
        "MCP_CODEBASE_DB_PATH": "/path/to/project/.codebase/vectors.db",
        "MCP_CODEBASE_EMBEDDER_PROVIDER": "openai-compatible",
        "MCP_CODEBASE_EMBEDDER_API_KEY": "your-api-key-here",
        "MCP_CODEBASE_EMBEDDER_BASE_URL": "https://api.voyageai.com/v1",
        "MCP_CODEBASE_EMBEDDER_MODEL_ID": "voyage-code-3",
        "MCP_CODEBASE_JUDGE_PROVIDER": "openai-compatible",
        "MCP_CODEBASE_JUDGE_API_KEY": "your-api-key-here",
        "MCP_CODEBASE_JUDGE_BASE_URL": "https://api.voyageai.com/v1",
        "MCP_CODEBASE_JUDGE_MODEL_ID": "voyage-rerank-2"
      },
      "enabled": true
    }
  }
}